@using KursCollection.ViewModel;
@model CollectionWithItemsViewModel

<h2>Create new Item</h2>

<form asp-area="" asp-controller="Item" asp-action="Create" asp-route-collectionId="@Model.CollectionId" method="post">
    <table id="mytable" class="table; modal-body">
        <tr>
            <th><label>Item Name:</label></th>
            <th><input required name="itemName" /></th>
        </tr>
